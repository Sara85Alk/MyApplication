<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hazimfenjan.myapplication.MainActivity">

    <ImageView
        android:id="@+id/image-background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/image-number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="150dp"
        android:maxHeight="150dp"
        android:scaleType="fitCenter"
        android:paddingLeft="5dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/forteen" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#e2f2f6"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="--- Our Team Member --- " />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#e2f2f6"
        android:textSize="22sp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="Muhamad Tariq" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#e2f2f6"
        android:textSize="22sp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:text="Alaa Ali" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#e2f2f6"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="10dp"
        android:text="Fatemah Elzahar" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#e2f2f6"
        android:textSize="22sp"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="Kam El II" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#e2f2f6"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView4"
        android:layout_marginLeft="10dp"
        android:text="Majd Albandik" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#e2f2f6"
        android:textSize="22sp"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="Mennah Btoush" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#e2f2f6"
        android:textSize="22sp"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Mohamed Zedan" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
